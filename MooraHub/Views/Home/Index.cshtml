<style>
    .landing-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 15px;
    }

    .feature-card-link {
        text-decoration: none;
    }

    .feature-card {
        border: 1px solid #ccc;
        border-radius: 15px;
        transition: transform 0.3s, box-shadow 0.3s;
        background-color: #f8f9fa;
        color: inherit;
        cursor: pointer;
    }

    body.dark-mode .feature-card {
        background-color: #1e1e1e;
        border-color: #555;
    }

    .feature-card:hover {
        transform: scale(1.05);
        box-shadow: 0px 0px 15px rgba(0,0,0,0.3);
    }

    .feature-card:active {
        transform: scale(0.98);
    }

    .feature-icon {
        font-size: 3.5rem;
        margin-bottom: 10px;
    }

    .feature-card h5 {
        margin-bottom: 5px;
        font-weight: 600;
    }

    .why-choose-us {
        text-align: center;
    }

    .choose-card {
        border: 1px solid #ccc;
        border-radius: 15px;
        padding: 20px;
        background-color: #f1f1f1;
    }

    body.dark-mode .choose-card {
        background-color: #2a2a2a;
        border-color: #555;
    }

    .choose-icon {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }

    .choose-card h5 {
        font-weight: 600;
    }

    footer {
        font-size: 0.95rem;
        color: #555;
    }

    body.dark-mode footer {
        color: #ccc;
    }

    footer a {
        text-decoration: none;
        color: #258cfb;
    }

        footer a:hover {
