<style>
    /* ===== CONTAINER ===== */
    .landing-container {
        max-width: 1200px;
        margin: auto;
    }

    /* ===== HEAD ===== */
    .tech-heading {
        background: linear-gradient(90deg, #4facfe, #00f2fe);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* ===== FEATURE CARDS ===== */
    .feature-card-link {
        text-decoration: none;
        color: inherit;
    }

    .feature-card {
        border-radius: 18px;
        min-height: 230px;
        background: linear-gradient(180deg, #ffffff, #f4f6f9);
        transition: all 0.25s ease;
    }

    body.dark-mode .feature-card {
        background: linear-gradient(180deg, #1b1b1b, #121212);
    }

    .feature-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 18px 35px rgba(0,0,0,0.18);
    }

    /* ICONS – FIXED & PROFESSIONAL */
    .feature-icon {
        font-size: 4.8rem;
        margin-bottom: 18px;
    }

    body.dark-mode .feature-icon {
        text-shadow: 0 0 18px rgba(0,150,255,0.5);
    }

    /* ===== WHY CHOOSE US ===== */
    .choose-card {
        border-radius: 18px;
        padding: 26px;
        background: #f6f7f9;
    }

    body.dark-mode .choose-card {
        background: #1f1f1f;
    }

    .choose-icon {
        font-size: 3.2rem;
        margin-bottom: 12px;
    }

    /* ===== FOOTER ===== */
