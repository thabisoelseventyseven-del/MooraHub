@{
    ViewData["Title"] = "Home";
}

<div class="landing-container text-center py-5">

    <h1 class="mb-5">Welcome to MooraHub</h1>
    <p class="lead mb-5">Your all-in-one platform for CVs, university applications, messages, and more!</p>

    <div class="features row justify-content-center g-4">

        <!-- CV Builder -->
        <div class="col-12 col-sm-6 col-md-4">
            <div class="feature-card p-4">
                <i class="bi bi-file-earmark-text-fill feature-icon"></i>
                <h3>CV Builder</h3>
                <p>Create professional CVs in minutes with ease.</p>
            </div>
        </div>

        <!-- University Application -->
        <div class="col-12 col-sm-6 col-md-4">
            <div class="feature-card p-4">
                <i class="bi bi-mortarboard-fill feature-icon"></i>
                <h3>University Application</h3>
                <p>Apply to your dream universities directly from MooraHub.</p>
            </div>
        </div>

        <!-- Messages -->
        <div class="col-12 col-sm-6 col-md-4">
            <div class="feature-card p-4">
                <i class="bi bi-chat-dots-fill feature-icon"></i>
                <h3>Messages</h3>
                <p>Send text and voice notes easily to connect with others.</p>
            </div>
        </div>

        <!-- Logos & Flyers -->
        <div class="col-12 col-sm-6 col-md-4">
            <div class="feature-card p-4">
                <i class="bi bi-card-image feature-icon"></i>
                <h3>Logos & Flyers</h3>
                <p>Create logos and flyers for your projects or business.</p>
            </div>
        </div>

        <!-- Checkout -->
        <div class="col-12 col-sm-6 col-md-4">
            <div class="feature-card p-4">
                <i class="bi bi-credit-card-2-front-fill feature-icon"></i>
                <h3>Checkout</h3>
                <p>Purchase services or premium features securely.</p>
            </div>
        </div>

        <!-- Admin Panel -->
        <div class="col-12 col-sm-6 col-md-4">
            <div class="feature-card p-4">
                <i class="bi bi-shield-lock-fill feature-icon"></i>
                <h3>Admin Panel</h3>
                <p>Manage users, messages, and monitor activity efficiently.</p>
            </div>
        </div>

    </div>
</div>

<style>
    .landing-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .feature-card {
        border: 1px solid #ccc;
        border-radius: 15px;
        transition: transform 0.3s, box-shadow 0.3s;
        background-color: #f8f9fa;
    }

    body.dark-mode .feature-card {
        background-color: #1e1e1e;
        border-color: #555;
    }

    .feature-card:hover {
        transform: scale(1.05);
        box-shadow: 0px 0px 15px rgba(0,0,0,0.3);
    }

    .feature-icon {
        font-size: 4rem;
        margin-bottom: 15px;
        color: #258cfb;
    }

    body.dark-mode .feature-icon {
        color: #4fc3f7;
    }

    .feature-card h3 {
        margin-bottom: 10px;
    }

    .feature-card p {
        font-size: 0.95rem;
        color: #555;
    }

    body.dark-mode .feature-card p {
        color: #ccc;
    }
</style>

<!-- Include Bootstrap Icons CDN if not already added -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
