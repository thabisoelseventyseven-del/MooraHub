@{
    ViewData["Title"] = "About MooraHub";
}

<div class="container my-4">

    <!-- HERO -->
    <div class="glass-card p-4 mb-4">
        <h2 class="tech-heading mb-1">About MooraHub</h2>
        <p class="mb-0" style="opacity:.85;">
            We help people in South Africa with CVs, university applications, templates, and business documents — fast and professional.
        </p>
    </div>

    <!-- WORK SHOWCASE -->
    <div class="row g-4">

        <!-- IMAGES -->
        <div class="col-12 col-lg-6">
            <div class="glass-card p-4 h-100">
                <h4 class="mb-3">Our work (Images)</h4>

                <div class="work-grid">
                    <!-- Put your images in wwwroot/images/work/ -->
                    <div class="work-item">
                        <img src="~/images/work/work1.jpg" alt="MooraHub Work Sample 1" />
                    </div>
                    <div class="work-item">
                        <img src="~/images/work/work2.jpg" alt="MooraHub Work Sample 2" />
                    </div>
                    <div class="work-item">
                        <img src="~/images/work/work3.jpg" alt="MooraHub Work Sample 3" />
                    </div>
                    <div class="work-item">
                        <img src="~/images/work/work4.jpg" alt="MooraHub Work Sample 4" />
                    </div>
                </div>

            </div>
        </div>

        <!-- VIDEOS -->
        <div class="col-12 col-lg-6">
            <div class="glass-card p-4 h-100">
                <h4 class="mb-3">Our work (Videos)</h4>

                <div class="work-video-stack">
                    <!-- Put your videos in wwwroot/videos/ -->
                    <div class="work-item">
                        <video controls preload="metadata">
                            <source src="~/videos/work1.mp4" type="video/mp4" />
                            Your browser does not support the video tag.
                        </video>
                    </div>

                    <div class="work-item">
                        <video controls preload="metadata">
                            <source src="~/videos/work2.mp4" type="video/mp4" />
                            Your browser does not support the video tag.
                        </video>
                    </div>
                </div>

                <!-- ✅ Removed the YouTube iframe completely -->
            </div>
        </div>

    </div>

    <!-- PRICING -->
    <div class="glass-card p-4 mt-4">
        <h4 class="mb-3">How our pricing works</h4>

        <div class="row g-3">
            <div class="col-12 col-md-6 col-lg-3">
                <div class="price-box">
                    <div class="price-title">CV PDF</div>
                    <div class="price-amount">R70</div>
                    <div class="price-note">Professional CV in PDF.</div>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <div class="price-box">
                    <div class="price-title">CV (PDF + Editing)</div>
                    <div class="price-amount">R100</div>
                    <div class="price-note">CV plus extra improvements.</div>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <div class="price-box">
                    <div class="price-title">University Application</div>
                    <div class="price-amount">From R150</div>
                    <div class="price-note">Depends on number of universities.</div>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <div class="price-box">
                    <div class="price-title">Templates</div>
                    <div class="price-amount">From R200</div>
                    <div class="price-note">Business, portfolio, reports.</div>
                </div>
            </div>
        </div>
    </div>

    <!-- PRIVACY -->
    <div class="glass-card p-4 mt-4">
        <h4 class="mb-3">Privacy policy</h4>
        <p class="mb-0" style="opacity:.9;">
            We only use your details to complete your request and communicate with you.
            We do not sell your information. Proof of payment and voice notes are stored securely for service delivery purposes.
        </p>
    </div>

</div>

<style>
    /* ====== Equal-size media blocks ====== */
    .work-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 14px;
    }

    .work-video-stack {
        display: grid;
        grid-template-columns: 1fr;
        gap: 14px;
    }

    /* Same frame for images & videos */
    .work-item {
        border-radius: 16px;
        overflow: hidden;
        background: rgba(255,255,255,0.6);
        border: 1px solid rgba(0,0,0,0.06);
        box-shadow: 0 12px 30px rgba(0,0,0,0.06);
        height: 210px; /* ✅ same height for all */
    }

        .work-item img,
        .work-item video {
            width: 100%;
            height: 100%;
            object-fit: cover; /* ✅ makes it uniform */
            display: block;
        }

    /* Pricing cards */
    .price-box {
        border-radius: 16px;
        padding: 16px;
        border: 1px solid rgba(0,0,0,0.06);
        background: rgba(255,255,255,0.55);
        box-shadow: 0 12px 30px rgba(0,0,0,0.06);
        height: 100%;
    }

    .price-title {
        font-weight: 700;
        margin-bottom: 6px;
    }

    .price-amount {
        font-size: 1.35rem;
        font-weight: 800;
    }

    .price-note {
        opacity: .8;
        font-size: .95rem;
        margin-top: 6px;
    }
</style>
