@{
    ViewData["Title"] = "About MooraHub";
}

<div class="container my-4">

    <!-- HERO -->
    <div class="glass-card p-4 p-md-5 mb-4">
        <h1 class="tech-heading mb-2">About MooraHub</h1>
        <p class="mb-0" style="opacity:.85;">
            We help students and job seekers with professional documents and applications — fast, clean, and reliable.
        </p>
    </div>

    <div class="row g-4">

        <!-- ABOUT -->
        <div class="col-lg-6">
            <div class="glass-card p-4 h-100">
                <h3 class="mb-3">What we do</h3>
                <ul class="mb-0" style="line-height:1.9;">
                    <li>CV writing (PDF + Word)</li>
                    <li>University applications support</li>
                    <li>Templates (business / portfolio / reports)</li>
                    <li>Guidance and admin support via Inbox</li>
                </ul>
            </div>
        </div>

        <!-- HOW IT WORKS -->
        <div class="col-lg-6">
            <div class="glass-card p-4 h-100">
                <h3 class="mb-3">How it works</h3>
                <ol class="mb-0" style="line-height:1.9;">
                    <li>Select one or more services on the Dashboard.</li>
                    <li>Go to Checkout and send your request (message + optional proof).</li>
                    <li>Admin replies in Inbox with progress and next steps.</li>
                </ol>
            </div>
        </div>

        <!-- PRICING -->
        <div class="col-12">
            <div class="glass-card p-4">
                <h3 class="mb-3">Pricing</h3>

                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Service</th>
                                <th>What you get</th>
                                <th class="text-end">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><strong>CV PDF</strong></td>
                                <td>Professional CV delivered in PDF format</td>
                                <td class="text-end"><strong>R70</strong></td>
                            </tr>
                            <tr>
                                <td><strong>CV PDF + “Directly”</strong></td>
                                <td>CV PDF + extra direct assistance/service</td>
                                <td class="text-end"><strong>R100</strong></td>
                            </tr>
                            <tr>
                                <td><strong>University Applications</strong></td>
                                <td>Guidance + submission support (depending on institution)</td>
                                <td class="text-end"><strong>Varies</strong></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="mt-3" style="opacity:.85;">
                    Note: Prices may differ depending on complexity (multiple pages, many institutions, urgent deadlines, etc.).
                </div>
            </div>
        </div>

        <!-- PORTFOLIO: IMAGES -->
        <div class="col-lg-6">
            <div class="glass-card p-4 h-100">
                <h3 class="mb-3">Our work (Images)</h3>

                <div class="row g-3">
                    <div class="col-6">
                        <img class="img-fluid rounded-4 shadow-sm"
                             src="~/images/work1.jpg"
                             alt="MooraHub Work Sample 1" />
                    </div>
                    <div class="col-6">
                        <img class="img-fluid rounded-4 shadow-sm"
                             src="~/images/work2.jpg"
                             alt="MooraHub Work Sample 2" />
                    </div>
                    <div class="col-6">
                        <img class="img-fluid rounded-4 shadow-sm"
                             src="~/images/work3.jpg"
                             alt="MooraHub Work Sample 3" />
                    </div>
                    <div class="col-6">
                        <img class="img-fluid rounded-4 shadow-sm"
                             src="~/images/work4.jpg"
                             alt="MooraHub Work Sample 4" />
                    </div>
                </div>

                <div class="mt-3 text-muted">
                    Tip: Put your images in <code>wwwroot/images/</code> and name them work1.jpg, work2.jpg, etc.
                </div>
            </div>
        </div>

        <!-- PORTFOLIO: VIDEOS -->
        <div class="col-lg-6">
            <div class="glass-card p-4 h-100">
                <h3 class="mb-3">Our work (Videos)</h3>

                <!-- Option A: Local video in wwwroot/videos/ -->
                <video class="w-100 rounded-4 shadow-sm mb-3" controls>
                    <source src="~/videos/demo1.mp4" type="video/mp4" />
                    Your browser does not support the video tag.
                </video>

                <!-- Option B: YouTube embed -->
                <div class="ratio ratio-16x9 rounded-4 overflow-hidden shadow-sm">
                    <iframe src="https://www.youtube.com/embed/dQw4w9WgXcQ"
                            title="MooraHub Demo"
                            allowfullscreen>
                    </iframe>
                </div>

                <div class="mt-3 text-muted">
                    Tip: Put local videos in <code>wwwroot/videos/</code> and update the filename.
                </div>
            </div>
        </div>

        <!-- PRIVACY POLICY -->
        <div class="col-12">
            <div class="glass-card p-4">
                <h3 class="mb-3">Privacy Policy</h3>

                <p style="opacity:.9;">
                    We respect your privacy. When you use MooraHub, we may collect basic details needed to deliver our services
                    (such as your email, your message content, and any files you choose to upload).
                </p>

                <ul class="mb-0" style="line-height:1.9;">
                    <li><strong>We do not sell your data.</strong></li>
                    <li><strong>Uploads</strong> (proof of payment / voice notes) are used only for service delivery and support.</li>
                    <li><strong>Access control:</strong> Only the admin account can view all tickets.</li>
                    <li>You can request removal of your messages/files by contacting support.</li>
                </ul>
            </div>
        </div>

    </div>
</div>
