@{
    ViewData["Title"] = "Dashboard";
}

<style>
    body {
        background: radial-gradient(circle at top, #0f2027, #203a43, #2c5364);
        color: #ffffff;
    }

    .dashboard-header {
        text-align: center;
        margin-top: 40px;
        margin-bottom: 60px;
        position: relative;
    }

        .dashboard-header h1 {
            font-size: 3rem;
            font-weight: 800;
            background: linear-gradient(90deg, #00f2fe, #4facfe, #43e97b);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .dashboard-header p {
            color: #cfd9df;
            margin-top: 10px;
        }

    .service-card {
        background: rgba(255, 255, 255, 0.08);
        border-radius: 16px;
        padding: 30px;
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
    }

        .service-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
        }

    .service-icon {
        font-size: 3rem;
        margin-bottom: 15px;
    }

    .service-title {
        font-weight: 700;
        margin-bottom: 10px;
    }

    .service-desc {
        color: #d1d5db;
        font-size: 0.95rem;
    }
</style>

<div class="container">
    <div class="dashboard-header">
        <h1>MooraHub</h1>
        <p>Your creative & academic support hub</p>
    </div>

    <div class="row g-4 justify-content-center">
        <div class="col-md-4">
            <div class="service-card">
                <div class="service-icon">📄</div>
                <div class="service-title">CV Creation</div>
                <div class="service-desc">
                    Professionally structured CVs tailored for jobs, bursaries, and internships.
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="service-card">
                <div class="service-icon">🎓</div>
                <div class="service-title">University Applications</div>
                <div class="service-desc">
                    Accurate and stress-free university application assistance.
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="service-card">
                <div class="service-icon">🌐</div>
                <div class="service-title">Landing Pages</div>
                <div class="service-desc">
                    Clean, modern landing pages for brands, businesses, and portfolios.
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="service-card">
                <div class="service-icon">📢</div>
                <div class="service-title">Posters & Flyers</div>
                <div class="service-desc">
                    Eye-catching promotional designs for events and businesses.
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="service-card">
                <div class="service-icon">📱</div>
                <div class="service-title">Social Media Designs</div>
                <div class="service-desc">
                    Banners, posts, and visuals optimized for social platforms.
                </div>
            </div>
        </div>
    </div>
</div>
