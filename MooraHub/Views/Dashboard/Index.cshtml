@{
    ViewData["Title"] = "Dashboard";
}

<h1>Welcome to MooraHub Dashboard</h1>

<button id="modeToggle">Toggle Dark/Light Mode</button>

<div id="dashboardContainer">
    <div class="card">
        <h3>CV Builder</h3>
        <button onclick="alert('Open CV Builder')">Open</button>
    </div>

    <div class="card">
        <h3>University Application</h3>
        <button onclick="alert('Open University Application')">Open</button>
    </div>

    <div class="card">
        <h3>Messages</h3>
        <button onclick="alert('Open Messages')">Open</button>
    </div>

    <div class="card">
        <h3>Checkout</h3>
        <button onclick="alert('Open Checkout')">Open</button>
    </div>

    <div class="card">
        <h3>Admin Panel</h3>
        <button onclick="alert('Open Admin Panel')">Open</button>
    </div>
</div>

<style>
    body.dark-mode {
        background-color: #121212;
        color: white;
    }

    #dashboardContainer {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px;
    }

    .card {
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 10px;
        width: 200px;
        text-align: center;
        background-color: #f5f5f5;
        transition: 0.3s;
    }

    body.dark-mode .card {
        background-color: #1e1e1e;
        border-color: #555;
    }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 0px 0px 10px rgba(0,0,0,0.2);
    }

    #modeToggle {
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        background-color: #258cfb;
        color: white;
        font-weight: bold;
    }
</style>

<script>
    const toggle = document.getElementById('modeToggle');
    toggle.addEventListener('click', () => {
        document.body.classList.toggle('dark-mode');
    });
</script>
