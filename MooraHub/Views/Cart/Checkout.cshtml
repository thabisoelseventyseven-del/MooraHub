@model List<MooraHub.Models.ServiceItem>
@{
    ViewData["Title"] = "Checkout";
    var total = Model.Sum(x => x.Price);
    var summary = string.Join(", ", Model.Select(x => $"{x.Name} (R{x.Price})"));
}

<div class="container my-4">

    <div class="glass-card p-4 mb-4">
        <h2 class="tech-heading mb-1">Checkout</h2>
        <p class="mb-0" style="opacity:.9;">
            Add all services you need, then send your request in <strong>Sepedi</strong> or <strong>English</strong>.
            You can also attach a <strong>voice note</strong>.
        </p>
    </div>

    @if (!Model.Any())
    {
        <div class="glass-card p-4">
            <p class="mb-0">
                Your cart is empty. Go back to <a href="/Home/Dashboard">Dashboard</a> and add services.
            </p>
        </div>
    }
    else
    {
        <div class="row g-4">

            <!-- LEFT: CART ITEMS -->
            <div class="col-12 col-lg-7">
                <div class="glass-card p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="mb-0">Your Selected Services</h4>

                        <form method="post" asp-controller="Cart" asp-action="Clear">
                            <button class="btn btn-danger btn-sm" type="submit">Clear Cart</button>
                        </form>
                    </div>

                    <div class="d-grid gap-2">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="cart-row p-3">
                                <div>
                                    <div class="cart-title">
                                        <span class="cart-icon">@Model[i].Icon</span>
                                        <strong class="ms-2">@Model[i].Name</strong>
                                    </div>
                                    <div class="price-pill mt-2">R@Model[i].Price</div>
                                </div>

                                <form method="post" asp-controller="Cart" asp-action="Remove">
                                    <input type="hidden" name="index" value="@i" />
                                    <button class="btn btn-warning btn-sm" type="submit">Remove</button>
                                </form>
                            </div>
                        }
                    </div>

                    <hr style="opacity:.2;" />

                    <div class="d-flex justify-content-between align-items-center">
                        <strong>Total</strong>
                        <strong class="price-pill">R@total</strong>
                    </div>

                    <div class="mt-3">
                        <a class="btn btn-outline-primary" href="/Home/Dashboard">
                            + Add more services
                        </a>
                    </div>
                </div>

                <!-- PAYMENT -->
                <div class="glass-card p-4 mt-4">
                    <h4 class="mb-2">Payment</h4>
                    <p style="opacity:.85;" class="mb-3">
                        Choose your preferred method. After you submit, admin replies with exact payment instructions.
                    </p>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Payment method</label>
                        <select class="form-select" name="PaymentMethod" form="ticketForm">
                            <option value="EFT">EFT / Bank Transfer</option>
                            <option value="CashSend">Cash Send</option>
                            <option value="PayPal">PayPal (Coming Soon)</option>
                            <option value="Card">Card Payment (Coming Soon)</option>
                        </select>
                    </div>

                    <div class="mb-2">
                        <label class="form-label fw-semibold">Proof of payment (optional)</label>
                        <input class="form-control" type="file" name="ProofOfPayment" form="ticketForm" />
                        <div style="opacity:.75; font-size:.9rem;" class="mt-2">
                            You can upload a screenshot / pdf. If you don’t have it now, admin will guide you.
                        </div>
                    </div>
                </div>
            </div>

            <!-- RIGHT: MESSAGE BOX -->
            <div class="col-12 col-lg-5">
                <div class="glass-card p-4">
                    <h4 class="mb-2">Message to Admin</h4>
                    <p style="opacity:.85;" class="mb-3">
                        Tell us what you want for each service. Use Sepedi or English. Attach a voice note if you want.
                    </p>

                    <!-- IMPORTANT: enctype for uploads -->
                    <form id="ticketForm" method="post" enctype="multipart/form-data"
                          asp-controller="Inbox" asp-action="Send">
                        @Html.AntiForgeryToken()

                        <input type="hidden" name="SelectedServices" value="@summary" />
                        <input type="hidden" name="TotalAmount" value="@total" />

                        <textarea class="mh-textarea" name="UserMessage"
                              placeholder="Type your message here (Sepedi / English)..." required></textarea>

                        <div class="mt-3">
                            <label class="form-label fw-semibold">Voice note (optional)</label>
                            <input class="form-control" type="file" name="VoiceNote" accept="audio/*" />
                            <div class="mt-2" style="opacity:.75; font-size:.9rem;">
                                You can upload .m4a / .mp3 / .wav (WhatsApp voice note is fine).
                            </div>
                        </div>

                        <button class="btn btn-primary w-100 mt-3" type="submit">
                            Send to Inbox
                        </button>
                    </form>

                    <div class="mt-3" style="opacity:.85; font-size:.95rem;">
                        After sending, open <strong>Inbox</strong> from the top menu to see admin reply.
                    </div>
                </div>
            </div>

        </div>
    }
</div>

<style>
    .cart-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-radius: 14px;
        border: 1px solid rgba(255,255,255,0.12);
        background: rgba(0,0,0,0.10);
        gap: 16px;
    }

    body:not(.dark-mode) .cart-row {
        background: rgba(255,255,255,0.65);
        border-color: rgba(0,0,0,0.08);
    }

    .cart-title {
        font-size: 1.15rem;
    }

    .cart-icon {
        font-size: 1.6rem;
    }

    .price-pill {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 999px;
        background: rgba(0,150,255,0.12);
        border: 1px solid rgba(0,150,255,0.22);
        font-weight: 700;
    }

    .mh-textarea {
        width: 100%;
        min-height: 160px;
        border-radius: 14px;
        padding: 14px;
        border: 1px solid rgba(0,0,0,0.12);
        outline: none;
    }

    body.dark-mode .mh-textarea {
        background: #111827;
        color: white;
        border-color: rgba(255,255,255,0.12);
    }
</style>
