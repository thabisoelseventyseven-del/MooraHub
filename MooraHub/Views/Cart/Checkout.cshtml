@model List<MooraHub.Models.ServiceItem>
@{
    ViewData["Title"] = "Checkout";
    var total = Model.Sum(x => x.Price);
    var summary = string.Join(", ", Model.Select(x => $"{x.Name} (R{x.Price})"));
}

<div class="container my-4">

    <div class="glass-card p-4 mb-4">
        <h2 class="tech-heading mb-1">Checkout</h2>
        <p class="mb-0" style="opacity:.9;">
            Write your request in <strong>Sepedi</strong> or <strong>English</strong>.
            Example: “Ke nyaka CV ya Nursing...” or “I need a CV + university application...”
        </p>
    </div>

    @if (!Model.Any())
    {
        <div class="glass-card p-4">
            <p class="mb-3">
                Your cart is empty.
            </p>

            <a class="btn btn-primary" href="/Home/Dashboard">Go to Dashboard</a>
        </div>
    }
    else
    {
        <div class="row g-4">

            <!-- LEFT: CART ITEMS -->
            <div class="col-12 col-lg-7">
                <div class="glass-card p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="mb-0">Your Selected Services</h4>

                        <div class="d-flex gap-2">
                            <a class="btn btn-outline-primary btn-sm" href="/Home/Dashboard">
                                + Add More Services
                            </a>

                            <form method="post" asp-controller="Cart" asp-action="Clear">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-danger btn-sm" type="submit">Clear Cart</button>
                            </form>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="cart-row p-3">
                                <div>
                                    <div class="cart-title">
                                        <span class="cart-icon">@Model[i].Icon</span>
                                        <strong class="ms-2">@Model[i].Name</strong>
                                    </div>

                                    <!-- ✅ FIXED PRICE RENDERING -->
                                    <div class="price-pill mt-2">R@(Model[i].Price)</div>
                                </div>

                                <form method="post" asp-controller="Cart" asp-action="Remove">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="index" value="@i" />
                                    <button class="btn btn-warning btn-sm" type="submit">Remove</button>
                                </form>
                            </div>
                        }
                    </div>

                    <hr style="opacity:.2;" />

                    <div class="d-flex justify-content-between align-items-center">
                        <strong>Total</strong>
                        <!-- ✅ FIXED TOTAL RENDERING -->
                        <strong class="price-pill">R@(total)</strong>
                    </div>
                </div>

                <!-- PAYMENT METHODS -->
                <div class="glass-card p-4 mt-4">
                    <h4 class="mb-2">Payment Method</h4>
                    <p style="opacity:.85;">
                        Choose how you want to pay. After you send your request, the admin will reply with the final total and payment details.
                    </p>

                    <div class="d-grid gap-2 mt-2">
                        <label class="payment-option">
                            <input type="radio" name="PaymentMethod" value="EFT" checked />
                            <span>🏦 Bank EFT (Recommended)</span>
                        </label>

                        <label class="payment-option">
                            <input type="radio" name="PaymentMethod" value="EWallet" />
                            <span>💸 eWallet / CashSend</span>
                        </label>

                        <label class="payment-option">
                            <input type="radio" name="PaymentMethod" value="Proof" />
                            <span>📎 Upload Proof of Payment</span>
                        </label>
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Proof of Payment (optional)</label>
                        <input class="form-control" type="file" />
                        <div class="small mt-2" style="opacity:.8;">
                            You can upload once we connect it to the inbox (next step).
                        </div>
                    </div>
                </div>
            </div>

            <!-- RIGHT: MESSAGE BOX -->
            <div class="col-12 col-lg-5">
                <div class="glass-card p-4">
                    <h4 class="mb-2">Message to Admin</h4>
                    <p style="opacity:.85;" class="mb-3">
                        Tell us what you want for each service (Sepedi / English).
                        Include details like: university name, course, CV type, poster style, dates, etc.
                    </p>

                    <form method="post" asp-controller="Inbox" asp-action="Send">
                        @Html.AntiForgeryToken()

                        <input type="hidden" name="SelectedServices" value="@summary" />
                        <input type="hidden" name="TotalAmount" value="@total" />

                        <textarea class="mh-textarea" name="UserMessage"
                              placeholder="Type your message here (Sepedi / English)..." required></textarea>

                        <button class="btn btn-primary w-100 mt-3" type="submit">
                            Send to Inbox
                        </button>
                    </form>

                    <div class="mt-3" style="opacity:.85; font-size:.95rem;">
                        After sending, open <strong>Inbox</strong> from the top menu to see the admin reply.
                    </div>
                </div>

                <div class="glass-card p-4 mt-4">
                    <h4 class="mb-2">Quick Tips</h4>
                    <ul class="mb-0" style="text-align:left; opacity:.9;">
                        <li>Sepedi or English is allowed.</li>
                        <li>State deadlines (e.g., “today 6pm”).</li>
                        <li>Add your details clearly (names, university, requirements).</li>
                    </ul>
                </div>
            </div>

        </div>
    }
</div>

<style>
    .cart-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-radius: 14px;
        border: 1px solid rgba(255,255,255,0.12);
        background: rgba(0,0,0,0.10);
        gap: 16px;
    }

    body:not(.dark-mode) .cart-row {
        background: rgba(255,255,255,0.65);
        border-color: rgba(0,0,0,0.08);
    }

    .cart-title {
        font-size: 1.15rem;
    }

    .cart-icon {
        font-size: 1.6rem;
        line-height: 1;
    }

    .price-pill {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 999px;
        font-weight: 700;
        background: rgba(0,0,0,0.15);
    }

    body:not(.dark-mode) .price-pill {
        background: rgba(0,0,0,0.06);
    }

    .mh-textarea {
        width: 100%;
        min-height: 140px;
        border-radius: 14px;
        padding: 14px 14px;
        border: 1px solid rgba(255,255,255,0.12);
        background: rgba(0,0,0,0.10);
        color: inherit;
        resize: vertical;
    }

    body:not(.dark-mode) .mh-textarea {
        background: rgba(255,255,255,0.65);
        border-color: rgba(0,0,0,0.10);
    }

    .payment-option {
        display: flex;
        gap: 12px;
        align-items: center;
        padding: 12px 14px;
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,0.12);
        background: rgba(0,0,0,0.06);
        cursor: pointer;
    }

    body:not(.dark-mode) .payment-option {
        background: rgba(255,255,255,0.70);
        border-color: rgba(0,0,0,0.08);
    }

    .payment-option input {
        transform: scale(1.1);
    }

    .glass-card {
        border-radius: 18px;
        border: 1px solid rgba(255,255,255,0.12);
        background: rgba(255,255,255,0.08);
        backdrop-filter: blur(10px);
        box-shadow: 0 16px 30px rgba(0,0,0,0.10);
    }

    body:not(.dark-mode) .glass-card {
        background: rgba(255,255,255,0.78);
        border-color: rgba(0,0,0,0.06);
    }
</style>
