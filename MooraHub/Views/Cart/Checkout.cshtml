@model List<MooraHub.Models.ServiceItem>
@{
    ViewData["Title"] = "Checkout";
    var total = Model.Sum(x => x.Price);
    var summary = string.Join(", ", Model.Select(x => $"{x.Name} (R{x.Price})"));
}

<div class="container my-4">

    <div class="glass-card p-4 mb-4">
        <h2 class="tech-heading mb-1">Checkout</h2>
        <p class="mb-0" style="opacity:.9;">
            Write your request in <strong>Sepedi</strong> or <strong>English</strong>.
            Example: “Ke nyaka CV ya Nursing...” or “I need a CV + university application...”
        </p>
    </div>

    @if (!Model.Any())
    {
        <div class="glass-card p-4">
            <p class="mb-0">
                Your cart is empty. Go back to <a href="/Home/Dashboard">Dashboard</a> and add services.
            </p>
        </div>
    }
    else
    {
        <div class="row g-4">

            <!-- LEFT: CART ITEMS -->
            <div class="col-12 col-lg-7">
                <div class="glass-card p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="mb-0">Your Selected Services</h4>

                        <form method="post" asp-controller="Cart" asp-action="Clear">
                            <button class="btn btn-danger btn-sm" type="submit">Clear Cart</button>
                        </form>
                    </div>

                    <div class="d-grid gap-2">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="d-flex justify-content-between align-items-center p-3"
                                 style="border-radius:14px; border:1px solid rgba(255,255,255,0.12); background: rgba(0,0,0,0.10);">
                                <div>
                                    <div style="font-size:1.25rem;">
                                        <span style="font-size:1.6rem;">@Model[i].Icon</span>
                                        <strong class="ms-2">@Model[i].Name</strong>
                                    </div>
                                    <div class="price-pill mt-2">R@Model[i].Price</div>
                                </div>

                                <form method="post" asp-controller="Cart" asp-action="Remove">
                                    <input type="hidden" name="index" value="@i" />
                                    <button class="btn btn-warning btn-sm" type="submit">Remove</button>
                                </form>
                            </div>
                        }
                    </div>

                    <hr style="opacity:.2;" />

                    <div class="d-flex justify-content-between align-items-center">
                        <strong>Total</strong>
                        <strong class="price-pill">R@total</strong>
                    </div>
                </div>
            </div>

            <!-- RIGHT: MESSAGE BOX -->
            <div class="col-12 col-lg-5">
                <div class="glass-card p-4">
                    <h4 class="mb-2">Message to Admin</h4>
                    <p style="opacity:.85;" class="mb-3">
                        Tell us what you want for each service. Use Sepedi or English.
                    </p>

                    <form method="post" asp-controller="Inbox" asp-action="Send">
                        @Html.AntiForgeryToken()

                        <input type="hidden" name="SelectedServices" value="@summary" />
                        <input type="hidden" name="TotalAmount" value="@total" />

                        <textarea class="mh-textarea" name="UserMessage"
                              placeholder="Type your message here (Sepedi / English)..." required></textarea>

                        <button class="btn btn-primary w-100 mt-3" type="submit">
                            Send to Inbox
                        </button>
                    </form>

                    <div class="mt-3" style="opacity:.85; font-size:.95rem;">
                        After sending, open <strong>Inbox</strong> from the top menu to see my reply.
                    </div>
                </div>

                <div class="glass-card p-4 mt-4">
                    <h4 class="mb-2">Payment (Coming Next)</h4>
                    <p style="opacity:.85;">
                        For now, the admin will reply with payment instructions. Next step we can add proof-of-payment upload.
                    </p>
                    <input class="form-control" type="file" disabled />
                </div>
            </div>

        </div>
    }
</div>
