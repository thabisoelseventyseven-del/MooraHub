@model List<MooraHub.Models.ServiceItem>
@{
    ViewData["Title"] = "Checkout";
    var total = Model.Sum(x => x.Price);
    var summary = string.Join(", ", Model.Select(x => $"{x.Name} (R{x.Price})"));
}

<div class="container my-4">

    <div class="glass-card p-4 mb-4">
        <h2 class="tech-heading mb-1">Checkout</h2>
        <p class="mb-0" style="opacity:.9;">
            Write your request in <strong>Sepedi</strong> or <strong>English</strong>.
            Example: “Ke nyaka CV ya Nursing...” or “I need a CV + university application...”
        </p>
    </div>

    @if (!Model.Any())
    {
        <div class="glass-card p-4">
            <p class="mb-0">
                Your cart is empty. Go back to <a href="/Home/Dashboard">Dashboard</a> and add services.
            </p>
        </div>
    }
    else
    {
        <div class="row g-4">

            <!-- LEFT: CART ITEMS -->
            <div class="col-12 col-lg-7">
                <div class="glass-card p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="mb-0">Your Selected Services</h4>

                        <form method="post" asp-controller="Cart" asp-action="Clear">
                            <button class="btn btn-danger btn-sm" type="submit">Clear Cart</button>
                        </form>
                    </div>

                    <div class="d-grid gap-2">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="d-flex justify-content-between align-items-center p-3"
                                 style="border-radius:14px; border:1px solid rgba(255,255,255,0.12); background: rgba(0,0,0,0.10);">
                                <div>
                                    <div style="font-size:1.25rem;">
                                        <span style="font-size:1.6rem;">@Model[i].Icon</span>
                                        <strong class="ms-2">@Model[i].Name</strong>
                                    </div>
                                    <div class="price-pill mt-2">@($"R{Model[i].Price}")</div>
                                </div>

                                <form method="post" asp-controller="Cart" asp-action="Remove">
                                    <input type="hidden" name="index" value="@i" />
                                    <button class="btn btn-warning btn-sm" type="submit">Remove</button>
                                </form>
                            </div>
                        }
                    </div>

                    <hr style="opacity:.2;" />

                    <div class="d-flex justify-content-between align-items-center">
                        <strong>Total</strong>
                        <strong class="price-pill">@($"R{total}")</strong>
                    </div>
                </div>

                <!-- PAYMENT BOX -->
                <div class="glass-card p-4 mt-4">
                    <h4 class="mb-2">Payment</h4>
                    <p style="opacity:.85;" class="mb-3">
                        Choose your payment method. If you pay now, upload proof.
                    </p>

                    <div class="mb-2 fw-semibold">Capitec CashSend Number:</div>
                    <div class="p-3 rounded" style="background: rgba(0,0,0,0.06);">
                        <strong>072 176 9099</strong>
                    </div>
                </div>
            </div>

            <!-- RIGHT: MESSAGE + VOICE NOTE + UPLOAD -->
            <div class="col-12 col-lg-5">
                <div class="glass-card p-4">
                    <h4 class="mb-2">Message to Admin</h4>
                    <p style="opacity:.85;" class="mb-3">
                        Tell us what you want for each service. Use Sepedi or English.
                    </p>

                    <form method="post" asp-controller="Inbox" asp-action="Send" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <input type="hidden" name="SelectedServices" value="@summary" />
                        <input type="hidden" name="TotalAmount" value="@total" />

                        <label class="fw-semibold mb-2">Payment method</label>
                        <select class="form-select mb-3" name="PaymentMethod" required>
                            <option value="CashSend (Capitec) - 0721769099">CashSend (Capitec) - 072 176 9099</option>
                            <option value="EFT / Bank Transfer">EFT / Bank Transfer</option>
                            <option value="Pay in Cash (Meet-up)">Pay in Cash (Meet-up)</option>
                        </select>

                        <label class="fw-semibold mb-2">Your message</label>
                        <textarea class="mh-textarea" name="UserMessage"
                              placeholder="Type your message here (Sepedi / English)..." required></textarea>

                        <hr class="my-3" style="opacity:.2;" />

                        <!-- VOICE NOTE RECORD -->
                        <div class="mb-2 fw-semibold">Voice note (record here)</div>
                        <div class="d-flex gap-2 mb-2">
                            <button type="button" id="btnStart" class="btn btn-outline-primary btn-sm">Start Recording</button>
                            <button type="button" id="btnStop" class="btn btn-outline-danger btn-sm" disabled>Stop</button>
                            <button type="button" id="btnClearVoice" class="btn btn-outline-secondary btn-sm" disabled>Clear</button>
                        </div>

                        <audio id="voicePreview" controls style="width:100%; display:none;"></audio>

                        <!-- Hidden file input that we fill with recorded audio -->
                        <input type="file" id="voiceFile" name="VoiceNote" accept="audio/*" style="display:none;" />

                        <hr class="my-3" style="opacity:.2;" />

                        <!-- PROOF OF PAYMENT UPLOAD -->
                        <label class="fw-semibold mb-2">Upload proof of payment (optional)</label>
                        <input class="form-control mb-3" type="file" name="ProofOfPayment" accept="image/*,application/pdf" />

                        <button class="btn btn-primary w-100 mt-2" type="submit">
                            Send to Inbox
                        </button>
                    </form>

                    <div class="mt-3" style="opacity:.85; font-size:.95rem;">
                        After sending, open <strong>Inbox</strong> from the top menu to see the reply.
                    </div>
                </div>
            </div>

        </div>
    }
</div>

<script>
    let mediaRecorder;
    let audioChunks = [];

    const btnStart = document.getElementById("btnStart");
    const btnStop = document.getElementById("btnStop");
    const btnClear = document.getElementById("btnClearVoice");
    const voicePreview = document.getElementById("voicePreview");
    const voiceFile = document.getElementById("voiceFile");

    btnStart.addEventListener("click", async () => {
        audioChunks = [];

        const stream = await navigator.mediaDevices.getUserMedia({ audio: true });
        mediaRecorder = new MediaRecorder(stream);

        mediaRecorder.ondataavailable = (e) => audioChunks.push(e.data);

        mediaRecorder.onstop = async () => {
            const blob = new Blob(audioChunks, { type: "audio/webm" });
            const audioUrl = URL.createObjectURL(blob);

            voicePreview.src = audioUrl;
            voicePreview.style.display = "block";

            // Convert blob -> File and attach to hidden file input
            const file = new File([blob], "voice-note.webm", { type: "audio/webm" });

            const dt = new DataTransfer();
            dt.items.add(file);
            voiceFile.files = dt.files;

            btnClear.disabled = false;
        };

        mediaRecorder.start();
        btnStart.disabled = true;
        btnStop.disabled = false;
        btnClear.disabled = true;
    });

    btnStop.addEventListener("click", () => {
        if (mediaRecorder && mediaRecorder.state !== "inactive") {
            mediaRecorder.stop();
        }
        btnStart.disabled = false;
        btnStop.disabled = true;
    });

    btnClear.addEventListener("click", () => {
        voicePreview.src = "";
        voicePreview.style.display = "none";

        const dt = new DataTransfer();
        voiceFile.files = dt.files;

        btnClear.disabled = true;
    });
</script>
