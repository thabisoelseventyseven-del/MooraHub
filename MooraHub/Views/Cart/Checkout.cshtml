@model List<MooraHub.Models.ServiceItem>

@{
    ViewData["Title"] = "Checkout";
    var total = Model?.Sum(x => x.Price) ?? 0;
    var summary = Model == null ? "" : string.Join(", ", Model.Select(x => $"{x.Name} (R{x.Price})"));
}

<div class="container my-4">

    <!-- TOP HEADER -->
    <div class="glass-card p-4 mb-4">
        <h2 class="tech-heading mb-1">Checkout</h2>
        <p class="mb-0" style="opacity:.9;">
            Write your request in <strong>Sepedi</strong> or <strong>English</strong>.
            Example: “Ke nyaka CV ya Nursing...” or “I need a CV + university application...”
        </p>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="glass-card p-4">
            <h5 class="mb-2">Your cart is empty</h5>
            <p class="mb-3" style="opacity:.85;">
                Go back to Dashboard and add services.
            </p>
            <a class="btn btn-primary" href="/Home/Dashboard">Back to Dashboard</a>
        </div>
    }
    else
    {
        <div class="row g-4">

            <!-- LEFT: SELECTED SERVICES -->
            <div class="col-12 col-lg-7">

                <div class="glass-card p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="mb-0">Your Selected Services</h4>

                        <form method="post" asp-controller="Cart" asp-action="Clear">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-danger btn-sm" type="submit">Clear Cart</button>
                        </form>
                    </div>

                    <div class="d-grid gap-3">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="cart-row p-3">
                                <div>
                                    <div class="cart-title">
                                        <span class="cart-icon">@Model[i].Icon</span>
                                        <strong class="ms-2">@Model[i].Name</strong>
                                    </div>

                                    <div class="price-pill mt-2">
                                        @($"R{Model[i].Price}")
                                    </div>
                                </div>

                                <form method="post" asp-controller="Cart" asp-action="Remove">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="index" value="@i" />
                                    <button class="btn btn-warning btn-sm" type="submit">Remove</button>
                                </form>
                            </div>
                        }
                    </div>

                    <hr style="opacity:.2;" />

                    <div class="d-flex justify-content-between align-items-center">
                        <strong>Total</strong>
                        <strong class="price-pill">@($"R{total}")</strong>
                    </div>
                </div>

                <!-- PAYMENT SECTION (UI only for now) -->
                <div class="glass-card p-4 mt-4">
                    <h4 class="mb-2">Payment</h4>
                    <p style="opacity:.85;" class="mb-3">
                        Payment is handled by admin reply for now. Choose a method you prefer:
                    </p>

                    <select class="form-select">
                        <option selected>EFT / Bank Transfer</option>
                        <option>Cash Send</option>
                        <option>PayPal (later)</option>
                    </select>

                    <div class="mt-3" style="opacity:.85; font-size:.95rem;">
                        After you send your request, admin replies with payment instructions.
                    </div>
                </div>

            </div>

            <!-- RIGHT: MESSAGE TO ADMIN -->
            <div class="col-12 col-lg-5">

                <div class="glass-card p-4">
                    <h4 class="mb-2">Message to Admin</h4>
                    <p style="opacity:.85;" class="mb-3">
                        Tell us what you want for each service. Use Sepedi or English.
                    </p>

                    <form method="post" asp-controller="Inbox" asp-action="Send">
                        @Html.AntiForgeryToken()

                        <input type="hidden" name="SelectedServices" value="@summary" />
                        <input type="hidden" name="TotalAmount" value="@total" />

                        <textarea class="mh-textarea" name="UserMessage" required
                              placeholder="Type your message here (Sepedi / English)..."></textarea>

                        <button class="btn btn-primary w-100 mt-3" type="submit">
                            Send to Inbox
                        </button>
                    </form>

                    <div class="mt-3" style="opacity:.85; font-size:.95rem;">
                        After sending, open <strong>Inbox</strong> from the top menu to see the reply.
                    </div>
                </div>

            </div>

        </div>
    }
</div>

<style>
    .glass-card {
        border-radius: 18px;
        border: 1px solid rgba(255,255,255,0.12);
        background: rgba(255,255,255,0.85);
        backdrop-filter: blur(10px);
        box-shadow: 0 16px 30px rgba(0,0,0,0.10);
    }

    body.dark-mode .glass-card {
        background: rgba(20,20,25,0.65);
        border-color: rgba(255,255,255,0.10);
        box-shadow: 0 18px 35px rgba(0,0,0,0.35);
        color: #fff;
    }

    .cart-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-radius: 14px;
        border: 1px solid rgba(0,0,0,0.08);
        background: rgba(0,0,0,0.03);
        gap: 16px;
    }

    body.dark-mode .cart-row {
        border-color: rgba(255,255,255,0.12);
        background: rgba(255,255,255,0.06);
    }

    .cart-title {
        font-size: 1.15rem;
    }

    .cart-icon {
        font-size: 1.6rem;
        line-height: 1;
    }

    .price-pill {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 999px;
        font-weight: 700;
        background: rgba(13,110,253,0.12);
        border: 1px solid rgba(13,110,253,0.25);
    }

    body.dark-mode .price-pill {
        background: rgba(13,110,253,0.18);
        border-color: rgba(13,110,253,0.35);
        color: #fff;
    }

    .mh-textarea {
        width: 100%;
        min-height: 170px;
        padding: 14px 14px;
        border-radius: 14px;
        border: 1px solid rgba(0,0,0,0.12);
        outline: none;
        resize: vertical;
        background: #fff;
    }

    body.dark-mode .mh-textarea {
        background: rgba(255,255,255,0.06);
        border-color: rgba(255,255,255,0.14);
        color: #fff;
    }
</style>
