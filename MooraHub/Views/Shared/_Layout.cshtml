@using MooraHub.Services
@using Microsoft.AspNetCore.Identity
@using MooraHub.Data
@using System.Linq

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MooraHub</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MooraHub.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark tech-navbar border-bottom mb-4">
            <div class="container-fluid">

                <a class="navbar-brand d-flex align-items-center gap-2"
                   asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" class="nav-logo" alt="MooraHub Logo" />
                    <span class="fw-bold">MooraHub</span>
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <!-- ✅ Career Pathfinder link INSIDE navbar -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="CareerPathfinder">Find My Path</a>
                        </li>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
                            </li>

                            <!-- CHECKOUT + CART BADGE -->
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-semibold d-flex align-items-center gap-2"
                                   asp-controller="Cart" asp-action="Checkout">
                                    Checkout

                                    @{
                                        var cartService = Context.RequestServices.GetService(typeof(CartSessionService)) as CartSessionService;
                                        var cartCount = cartService?.Count(Context) ?? 0;
                                    }

                                    @if (cartCount > 0)
                                    {
                                        <span class="badge rounded-pill bg-danger" style="font-size:.75rem;">
                                            @cartCount
                                        </span>
                                    }
                                </a>
                            </li>

                            <!-- INBOX + UNREAD REPLY BADGE -->
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center gap-2"
                                   asp-controller="Inbox" asp-action="Index">
                                    Inbox

                                    @{
                                        var userManager = Context.RequestServices.GetService(typeof(UserManager<IdentityUser>)) as UserManager<IdentityUser>;
                                        var db = Context.RequestServices.GetService(typeof(ApplicationDbContext)) as ApplicationDbContext;

                                        var myUserId = userManager?.GetUserId(User);
                                        var unreadCount = 0;

                                        if (!string.IsNullOrWhiteSpace(myUserId) && db != null)
                                        {
                                            unreadCount = db.SupportTickets.Count(t => t.UserId == myUserId && t.UserUnreadReply);
                                        }
                                    }

                                    @if (unreadCount > 0)
                                    {
                                        <span class="badge rounded-pill bg-danger" style="font-size:.75rem;">
                                            @unreadCount
                                        </span>
                                    }
                                </a>
                            </li>

                            <!-- ADMIN LINK -->
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link fw-semibold text-danger"
                                       asp-controller="Inbox" asp-action="Admin">
                                        Admin
                                    </a>
                                </li>
                            }
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        <button id="modeToggle" class="btn btn-outline-light btn-sm" type="button">
                            🌙 / ☀️
                        </button>

                        <partial name="_LoginPartial" />
                    </div>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center">
            &copy; 2026 - MooraHub -
            <a asp-controller="Home" asp-action="About">About</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const toggle = document.getElementById('modeToggle');

        if (localStorage.getItem('mode') === 'dark') {
            document.body.classList.add('dark-mode');
        }

        toggle?.addEventListener('click', () => {
            document.body.classList.toggle('dark-mode');
            localStorage.setItem(
                'mode',
                document.body.classList.contains('dark-mode') ? 'dark' : 'light'
            );
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
