<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MooraHub</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MooraHub.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <!-- TECH NAVBAR -->
        <nav class="navbar navbar-expand-lg navbar-dark tech-navbar border-bottom mb-4">
            <div class="container-fluid">

                <!-- LOGO -->
                <a class="navbar-brand d-flex align-items-center gap-2"
                   asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" class="nav-logo" alt="MooraHub Logo" />
                    <span class="fw-bold">MooraHub</span>
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">

                    <!-- LEFT MENU -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
                            </li>

                            <!-- ✅ Checkout is in CartController -->
                            <li class="nav-item">
                                <a class="nav-link fw-semibold text-warning"
                                   asp-controller="Cart" asp-action="Checkout">
                                    Checkout
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Inbox" asp-action="Index">
                                    Inbox
                                </a>
                            </li>

                            <!-- ✅ Admin link ONLY for Admin role -->
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link fw-semibold text-danger"
                                       asp-controller="Inbox" asp-action="Admin">
                                        Admin
                                    </a>
                                </li>
                            }
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <!-- RIGHT MENU -->
                    <div class="d-flex align-items-center gap-2">

                        <!-- DARK MODE -->
                        <button id="modeToggle" class="btn btn-outline-light btn-sm">
                            🌙 / ☀️
                        </button>

                        <partial name="_LoginPartial" />
                    </div>

                </div>
            </div>
        </nav>
    </header>

    <!-- PAGE CONTENT -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center">
            &copy; 2026 - MooraHub -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- DARK MODE SCRIPT -->
    <script>
        const toggle = document.getElementById('modeToggle');

        if (localStorage.getItem('mode') === 'dark') {
            document.body.classList.add('dark-mode');
        }

        toggle?.addEventListener('click', () => {
            document.body.classList.toggle('dark-mode');
            localStorage.setItem(
                'mode',
                document.body.classList.contains('dark-mode') ? 'dark' : 'light'
            );
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
